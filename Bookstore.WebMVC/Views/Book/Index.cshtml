@model IEnumerable<Bookstore.Models.AdminBookListItem>

@{
    /**/

    ViewBag.Title = "Index";
}

<h2>Book Database</h2>

<p>
    @Html.ActionLink("Create New", "Create", "Create", htmlAttributes: new { @class = "btn btn-info" })
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade-in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table">
    <tr>
        <th>

            @Html.DisplayNameFor(model => model.TypeOfBook)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsFiction)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsNewRelease)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsBestSeller)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Inventory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookTypeString)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsFiction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsNewRelease)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsBestSeller)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inventory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.BookId }, htmlAttributes: new { @class = "btn btn-info" })
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.BookId }, htmlAttributes: new { @class = "btn btn-info" })
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.BookId }, htmlAttributes: new { @class = "btn btn-info" })
            <td></td>
        </tr>
    }

</table>
